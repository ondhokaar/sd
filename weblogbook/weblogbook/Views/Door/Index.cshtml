
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>



    <div class="section full-height" style="max-height:100vb">
        <div class="container">
            <div class="row  justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 text-center">

                        <h6 class="mb-0 pb-3"><span>Log In </span><span>Sign Up</span></h6>
                        @{
                            if (TempData["val"] == null)
                            {
                                ViewBag.val = "";
                            }
                            else
                            {
                                ViewBag.val = TempData["val"].ToString();
                            }

                            if (TempData["info"] == null)
                            {
                                ViewBag.info = "";
                            }
                            else 
                            {
                                ViewBag.info = TempData["info"].ToString();
                            }

                        }
                        <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" @ViewBag.val/>
                        <label for="reg-log"></label>


                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <h4 class="mb-4 pb-3">Log In</h4>


                                            <form action="/Feed/Feed" method="post">


                                                <div class="form-group">
                                                    <input type="email" name="email" class="form-style" placeholder="Your Email" id="logemail" autocomplete="off" required>
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>

                                                <div class="form-group mt-2">
                                                    <input type="password" name="pass" class="form-style" placeholder="Your Password" id="logpass" autocomplete="off" required>

                                                </div>

                                                <button class="btn mt-4">submit</button>
                                            </form>
                                            <p style="color:red">@ViewBag.info</p>
                                            <p class="mb-0 mt-4 text-center"><a href="#0" class="link">Forgot your password?</a></p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-back">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <h4 class="mb-4 pb-3">Sign Up</h4>
                                            <form action="/Door/Login" method="post">


                                                <div class="form-group">
                                                    <input type="text" name="fullname" class="form-style" placeholder="Your Full Name" id="logname" autocomplete="off" required>
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input type="email" name="email" class="form-style" placeholder="Your Email" id="logemail" autocomplete="off" required>
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input type="password" name="pass" class="form-style" placeholder="Your Password" id="logpass" autocomplete="off" required>
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                <!--------------------->
                                                <button class="btn mt-4">submit</button>
                                            </form>
                                            <p>@ViewBag.info</p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Weblogbook</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
